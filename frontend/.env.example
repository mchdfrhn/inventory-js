# ==============================================
# FRONTEND ENVIRONMENT CONFIGURATION  
# ==============================================
# Salin file ini menjadi .env dan sesuaikan dengan konfigurasi Anda

# API Configuration
# URL backend API (sesuaikan dengan URL backend server)
# Development: http://localhost:8080
# Production: https://your-backend-domain.com/api/v1
VITE_API_BASE_URL=http://localhost:8080
# Timeout untuk request API dalam milidetik (10000 = 10 detik)
VITE_API_TIMEOUT=10000

# Application Configuration
# Nama aplikasi yang ditampilkan di header dan title
VITE_APP_NAME=STTPU Inventory System
# Versi aplikasi yang ditampilkan di footer
VITE_APP_VERSION=1.0.0
# Environment aplikasi: development | staging | production
VITE_APP_ENV=development

# Features Configuration
# Enable/disable Google Analytics tracking
VITE_ENABLE_ANALYTICS=false
# Enable/disable debug mode (console logs, dev tools)
VITE_ENABLE_DEBUG=true
# Enable/disable Progressive Web App features
VITE_ENABLE_PWA=false

# UI Configuration
# Theme default aplikasi: light | dark | auto
VITE_DEFAULT_THEME=light
# Jumlah item yang ditampilkan per halaman dalam tabel
VITE_ITEMS_PER_PAGE=10
# Ukuran maksimum file upload dalam bytes (10485760 = 10MB)
VITE_MAX_FILE_SIZE=10485760

# External Services (Optional)
# Google Analytics Tracking ID (uncomment jika menggunakan GA)
# VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# Sentry DSN untuk error monitoring (uncomment jika menggunakan Sentry)
# VITE_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
