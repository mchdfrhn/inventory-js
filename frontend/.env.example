# ==============================================
# FRONTEND ENVIRONMENT CONFIGURATION
# ==============================================
# Salin file ini menjadi .env dan sesuaikan dengan konfigurasi Anda

# API Configuration
# URL backend API server
# Development: http://localhost:8080
# Production: https://your-backend-domain.com
VITE_API_BASE_URL=http://localhost:8080
# Timeout untuk request API dalam milidetik
VITE_API_TIMEOUT=10000

# Application Configuration
# Nama aplikasi yang ditampilkan di UI
VITE_APP_NAME=STTPU Inventory System
# Versi aplikasi
VITE_APP_VERSION=1.0.0
# Environment saat ini
VITE_APP_ENV=development

# Features Configuration
# Aktifkan/nonaktifkan Google Analytics
VITE_ENABLE_ANALYTICS=false
# Aktifkan/nonaktifkan debug mode (console logs)
VITE_ENABLE_DEBUG=true
# Aktifkan/nonaktifkan Progressive Web App
VITE_ENABLE_PWA=false

# UI Configuration
# Theme default: light | dark | auto
VITE_DEFAULT_THEME=light
# Jumlah item per halaman dalam tabel
VITE_ITEMS_PER_PAGE=10
# Ukuran maksimum file upload (10MB)
VITE_MAX_FILE_SIZE=10485760

# External Services (Optional)
# Uncomment dan isi jika menggunakan layanan eksternal
# Google Analytics ID
# VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# Sentry DSN untuk monitoring error
# VITE_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
