# STTPU Inventory System Environment Configuration
# Copy this file to .env and modify the values according to your environment

# ===========================================
# Backend Configuration
# ===========================================

# Server Configuration
PORT=8080
GIN_MODE=debug

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_NAME=inventaris
DB_SSLMODE=disable

# Application Configuration
APP_NAME=STTPU Inventory System
APP_VERSION=1.0.0
APP_ENV=development

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# ===========================================
# Frontend Configuration
# ===========================================

# API Configuration
VITE_API_BASE_URL=http://localhost:8080
VITE_API_TIMEOUT=10000

# Application Configuration
VITE_APP_NAME=STTPU Inventory System
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# Features Configuration
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_PWA=false

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ITEMS_PER_PAGE=10
VITE_MAX_FILE_SIZE=10485760

# ===========================================
# Optional External Services
# ===========================================

# Google Analytics
# VITE_GOOGLE_ANALYTICS_ID=

# Sentry Error Tracking
# VITE_SENTRY_DSN=

# ===========================================
# Docker Configuration
# ===========================================

# PostgreSQL Docker Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=inventaris

# Network and Ports
BACKEND_PORT=8080
FRONTEND_PORT=3000
POSTGRES_PORT=5432
